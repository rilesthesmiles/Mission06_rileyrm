@{
    ViewData["Title"] = "Delete Response";
}
@model MovieForumResponse 

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Title?</h3>

<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <br />
    <a asp-controller="Home" asp-action="ViewMovies" class="btn border-dark btn-light btn-outline-dark">Cancel</a>

    <input type="hidden" asp-for="MovieForumID"/>

</form>
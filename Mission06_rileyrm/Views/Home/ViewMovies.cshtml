@{
    ViewData["Title"] = "View Movies";
}
@model List<MovieForumResponse>

<table class="table table-bordered table-striped table-light">
    <thread class="font-weight-bolder">
        <tr>
            <td>Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thread>

    <tbody>
        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Title</td>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>

                    <td><a asp-controller="Home" asp-action="Edit" asp-route-movieforumid="@x.MovieForumID">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-movieforumid="@x.MovieForumID">Delete</a></td>
                </tr>
            }
    </tbody>
</table>
